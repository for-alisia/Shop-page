- var nav = ['Планшеты','Мобильные телефоны','Mp3 плееры','Персональные компьютеры','Ноутбуки','Аксессуары','Бытовая техника']
block active-nav
	- var activeNav = 'Планшеты'
nav.navigation
	ul.nav__list
		each item in nav
			if item == activeNav
				li.nav__item.nav__item_active
					a(href="#").nav__link=item
			else
				li.nav__item
					a(href="#").nav__link=item
