block product-info
	- var largeSrc = 'images/products/1.jpg'
	- var src = ['images/products/1.jpg','images/products/2.jpg','images/products/3.jpg']
	- var desc = [{'option': 'SIM', 'val': 'microSIM'}, {'option':'Количество SIM','val': 2}, {'option':'Цвет','val':'белый'}, {'option':'ОС','val':'Android'}, {'option':'Связь 3G','val':'Есть'}, {'option':'4G (LTE)','val':'Нет'}, {'option':'GPS-модуль','val':'есть'}, {'option':'description']
	- var fullDesc = 'Смартфон Samsung GT-I9301I GALAXY S 3 Ceramic White Моноблок, Micro-SIM, Android 4.4, 3G, Bluetooth 4.0, EDGE, GPRS, WAP, Wi-Fi, Количество ядер процессора 4, Частота процессора 1400 МГц'
	- var qty = 9
	- var ratio = 4
	- var price = '11 290'
	- var qtyPhone = true
	- var plu = '189238'
ul.products__list
	- for (var i=0; i<qty; i++)
		li.products__item.medium
			.product__gallery
				a.product__image
					img(src="#{largeSrc}", alt="Phone").main__image
				ul.product__image__list
					each item in src
						li.product__image__item
							img(src="#{item}", alt="Phone").small__image
				.plu 
					span.plu__text Артикул
					span.plu__number=plu
			.desc-wrapper
				.product__description
					h2.description__header Samsung GT-I9301I GALAXY S 3
					ul.description__list
						each item in desc
							li.description__item
								.description_option=item.option
								.description_value=item.val
					p.full-description=fullDesc
				.product__rating
					ul.rating__list
						- for (var k=0; k<5; k++)
							if (k<ratio)
								li(data-rating="#{ratio}").rating__item.rating__item_active
							else
								li(data-rating="#{ratio}").rating__item
					.rating__total=ratio
			.buy-wrapper		
				.product__price #{price} 
					span.ruble &#8381;
				.product__buy
					if (qtyPhone)
						.product__qty В наличии
					else
						.product__qty.product__qty_off Нет в наличии
					button.button__buy В корзину

