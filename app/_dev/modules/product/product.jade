block product-info
	- var src = ['images/products/1.jpg','images/products/1.jpg','images/products/1.jpg']
	- var desc = [{'option': 'SIM', 'val': 'microSIM'}, {'option':'Количество SIM','val': 2}, {'option':'Цвет','val':'белый'}, {'option':'ОС','val':'Android'}, {'option':'Связь 3G','val':'Есть'}, {'option':'4G (LTE)','val':'Нет'}, {'option':'GPS-модуль','val':'есть'}]
	- var qty = 9
	- var ratio = 4
	- var price = '11 290'
	- var qtyPhone = true
ul.products__list
	- for (var i=0; i<qty; i++)
		li.products__item
			.product__gallery
				.product__image
					image(src="images/products/1.jpg")
				ul.product__image__list
					each item in src
						li.product__image__item
							img(src="#{item}")
			.product__description
				h2.description__header Samsung
				ul.description__list
					each item in desc
						li.description__item
							.description_option=item.option
							.description_value=item.val
			.product__rating
				ul.rating__list
					- for (var k=0; k<5; k++)
						if (k<ratio)
							li.rating__item.rating__item_active
						else
							li.rating__item
				.rating__total=ratio
			.product__price=price
			.product__buy
				if (qtyPhone)
					.product__qty Есть в наличии
				else
					.product__qty.product__qty_off Нет в наличии
				.product__button
					button.button__buy В корзину

